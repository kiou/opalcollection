<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block title %} <title> Opal Collection</title>{% endblock %}

    {% block opengraph %}
        <meta property="og:title" content="Opal Collection">
        <meta property="og:description" content="Content">
        <meta property="og:url" content="Content">
        <meta property="og:image" content="Content">
    {% endblock %}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="{{ asset('img/favicon.png') }}">

    <link rel="stylesheet" href="{{ asset('css/reset.css') }}">
    <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/owl.theme.default.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">

    <script src="https://kit.fontawesome.com/b350f69ae8.js" crossorigin="anonymous"></script>
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/owl.carousel.min.js') }}"></script>
    <script src="{{ asset('js/app.js') }}"></script>

</head>
<body>
    
    <main class="content">

        {{ include('include/flash.html.twig') }}

        {{ include('include/menu.html.twig') }}

        {% block content %}

        {% endblock %}

        {{ include('include/footer.html.twig') }}
    </main>

    <button onclick="retourEnHaut()" id="btnHaut" title="Retour en haut de page">&#x2191;</button>

    {% block script %}

    {% endblock %}

